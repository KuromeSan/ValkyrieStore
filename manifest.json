{

  "description": "Brings back the old \"Valkyrie\" Playstation Store!\n\nGoto https://store.playstation.com/en-us/home/games to access the old store",
  "manifest_version": 2,
  "name": "Valkyrie!",
  "version": "1.4",
  "homepage_url": "https://github.com/KuromeSan/ValkyrieStore",
  "icons": {
    "48": "silica.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "https://store.playstation.com/*", "https://web.archive.org/*", "storage"
  ],
  "web_accessible_resources": [
	"oldStore.html"
  ],
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
	"default_icon": {
	  "48": "silica.png"
	},
	"default_title": "Options",
	"default_popup": "options/ExtOptions.html"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
